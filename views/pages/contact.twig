{% extends 'bases/container.twig' %}

{% block content %}
<main>
    <h1>Get in touch</h1>
    <h4 class="mb-4">Do you think we can work together or do you simply want to shoot me a message ? It's right here !</h4>
    
    {% if success.sent %}
        <div class="alert alert-success">{{ success.sent }}</div>
    {% endif %}
    <div class="row justify-content-center">
    
        <form class="col-sm-12 col-md-8" action="#" method="post">
            <div class="form-group">
                <label for="name">Your Name</label>
                <input class="form-control" type="text" name="name" id="name" value="{{ form_name }}">
                {% if errors.name %}
                    <div class="mt-2 alert alert-warning">
                        {{ errors.name }}
                    </div>
                {% endif %}
            </div>
            <div class="form-group">
                <label for="email">Your E-mail</label>
                <input class="form-control" type="email" name="email" id="email" value="{{ email }}">
                {% if errors.email %}
                    <div class="mt-2 alert alert-warning">
                        {{ errors.email }}
                    </div>
                {% endif %}
            </div>
            <div class="form-group">
                <label for="message">Your Message</label>
                <textarea style="resize: none;" class="form-control" name="message" id="message" cols="30" rows="10">{{ message }}</textarea>
                {% if errors.message %}
                    <div class="mt-2 alert alert-warning">
                        {{ errors.message }}
                    </div>
                {% endif %}
            </div>
            <div class="form-group text-center">
                <input class="btn btn-primary" type="submit" value="Send">
            </div>
        </form>
    </div>
</main>

{% endblock content %}