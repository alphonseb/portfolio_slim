{% extends 'bases/container.twig' %}

{% block content %}

<main>
    <h1>Login</h1>
    <div class="row">
        <div class="col-4">
        
            <form action="#" method="post">
                {% if errors.combination %}
                    <div class="alert alert-warning">{{ errors.combination }}</div>
                {% endif %}
                <div class="form-group">
                    <label for="login">Login</label>
                    <input class="form-control" type="text" name="login" id="login">
                    {% if errors.combination %}
                        <div class="alert alert-warning">{{ errors.login }}</div>
                    {% endif %}
                </div>
                <div class="form-group">
                    <label for="password">Password</label>
                    <input class="form-control" type="password" name="password" id="password">
                    {% if errors.combination %}
                        <div class="alert alert-warning">{{ errors.password }}</div>
                    {% endif %}
                </div>
                <div class="form-group text-center">
                    <input class="btn btn-primary" type="submit" value="Connecter">
                </div>
            </form>
        </div>
    </div>
</main>

{% endblock content %}