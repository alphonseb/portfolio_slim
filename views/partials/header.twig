    <script>
        tinymce.init({
            selector: '.tinymce',
            images_upload_url: "{{base_url()}}/tinymce_images.php",
            plugins: "image",
            toolbar: "image"
        });
    </script>
</head>
<body>
    <header>
        <div class="logo">
            
        </div>
        <nav>
            <ul>
                <li><a href="{{ path_for('home') }}">Home</a></li>
