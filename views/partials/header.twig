                <li><a href="{{ path_for('contact') }}">Contact</a></li>
                {% if user is not empty %}
                    <li><a href="{{ path_for('admin') }}">Admin Home</a></li>
                    <li><a href="{{ path_for('disconnect') }}">Admin Disconnect</a></li>
                {% endif %}
            </ul>
        </nav>
    </header>